<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF001226" /> <stroke
            android:width="1dp"
            android:color="#4DFFFFFF" /> <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/aplication_new_blue"
                android:endColor="#FF001226"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" /> <corners android:radius="12dp" /> <padding
            android:left="16dp"
            android:top="12dp"
            android:right="16dp"
            android:bottom="12dp" />
        </shape>
    </item>
</selector>