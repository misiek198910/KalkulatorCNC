<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:ignore="UseCompoundDrawables"
    android:id="@+id/main">

    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/main_button1"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:onClick="main_button1_clicked"
            android:text="@string/main_button1" />

        <Button
            android:id="@+id/main_button2"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:onClick="main_button2_clicked"
            android:text="@string/main_button2" />

        <Button
            android:id="@+id/main_button3"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:onClick="main_button3_clicked"
            android:text="@string/main_button3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/main_button4"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:onClick="main_button4_clicked"
            android:text="@string/main_button4" />

        <Button
            android:id="@+id/main_button6"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:onClick="main_button6_clicked"
            android:text="@string/main_button6" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>